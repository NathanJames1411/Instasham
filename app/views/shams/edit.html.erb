<div class='text-center'>
  <%= image_tag @sham.image.url(:medium) %>
</div>
<div class='form-wrapper'>
  <%= simple_form_for @sham, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class='form-group'>
      <%= f.input :image %>
    </div>
    <div class='form-group text-center'>
      <%= f.input :caption %>
    </div>
    <div class='form-group text-center'>
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>

<div class='text-center edit-links'>
  <%= link_to "Delete Sham", sham_path(@sham), method: :delete, data: { confirm: "Are you sure you want to delete this sham?" } %>
  |
  <%= link_to "cancel", shams_path %>
